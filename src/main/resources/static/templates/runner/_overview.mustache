<div class="container">
    <h1 class="runner-name title is-size-1">{{#logo}}<img width="50px" style="padding-right:10px" src="{{logo}}"/>{{/logo}}{{name}}</h1>
    <h1 class="runner-name title is-size-3">Task Definition type: {{type}} </h1>
    <h1 class="runner-description title is-size-3">{{description}}</h1>
    <h1 class="runner-class title is-size-4">{{className}}</h1>
    <div class="block">
        <a target="_cherryElementTemplate" href="/cherry/api/runner/templatefile?name={{name}}" class="button is-info">Download Element Template</a>
    </div>
    <div class="block">
        <div class="buttons has-addons">
            <button data-runner-name="{{name}}" class="start-runner button {{#active}}is-selected is-primary{{/active}}">{{#active}}Active{{/active}}{{^active}}Start{{/active}}</button>
            <button data-runner-name="{{name}}" class="stop-runner button {{^active}}is-selected is-danger{{/active}}">{{^active}}Stopped{{/active}}{{#active}}Stop{{/active}}</button>
        </div>
    </div>
</div>